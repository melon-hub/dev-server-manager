{
  "name": "dev-server-manager",
  "version": "2.0.8",
  "description": "Lightweight development server manager",
  "main": "dist/main.js",
  "scripts": {
    "build": "node scripts/build.js",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron .",
    "dist": "npm run build && electron-builder --publish never",
    "dist:mac": "npm run build && electron-builder --mac --publish never",
    "dist:win": "npm run build && electron-builder --win --publish never",
    "dist:linux": "npm run build && electron-builder --linux --publish never",
    "dist:all": "npm run build && electron-builder -mwl --publish never"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.19.0",
    "electron": "^36.4.0",
    "electron-builder": "^24.13.3",
    "electron-store": "^10.0.1"
  },
  "dependencies": {
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "electron-updater": "^6.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.8.3"
  },
  "build": {
    "appId": "com.devservermanager.app",
    "productName": "Dev Server Manager",
    "directories": {
      "output": "release"
    },
    "publish": [{
      "provider": "github",
      "owner": "melon-hub",
      "repo": "dev-server-manager"
    }],
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "artifactName": "Dev-Server-Manager-Setup-${version}.exe",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "artifactName": "Dev-Server-Manager-Setup-${version}.exe",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Development"
    },
    "publish": [{
      "provider": "github",
      "owner": "melon-hub",
      "repo": "dev-server-manager"
    }]
  }
}
